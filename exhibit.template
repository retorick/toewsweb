<!DOCTYPE html>
<html>
<head>
  <title>Display</title>
  <meta charset="UTF-8"/>
  <link rel="stylesheet" href="css/exhibit.css"/>
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
</head>
<body>
<div class="container">
  <div class="glass-case-wrapper">
    <iframe id="exhibit" class="glass-case" src="%LINK%"></iframe>
  </div>
  <div class="description-wrapper">
    <h2>%TITLE%</h2>
    <p>%URL%</p>
    <div class="description">
      %DESC%
    </div>
  </div>
</div>
<script type="text/javascript">
window.exhibitLoaded = false;
$('iframe.glass-case').css('visibility', 'hidden');
$('iframe').load(function() {
    $('iframe.glass-case').css('visibility', 'visible');
    window.exhibitLoaded = true;
});
</script>
</body>
</html>
